@model IEnumerable<string>

@{
    ViewData["Title"] = "Queue";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>Queue</h2>
                <div>
                    <a asp-action="SendMessage" class="btn btn-primary me-2">
                        <i class="fas fa-plus"></i> Send Message
                    </a>
                    <form asp-action="ProcessMessage" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-play"></i> Process Message
                        </button>
                    </form>
                </div>
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["InfoMessage"] != null)
            {
                <div class="alert alert-info alert-dismissible fade show" role="alert">
                    @TempData["InfoMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <div class="row">
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">Messages</h5>
                        </div>
                        <div class="card-body">
                            @if (Model.Any())
                            {
                                <div class="list-group">
                                    @foreach (var message in Model)
                                    {
                                        <div class="list-group-item">
                                            <div class="d-flex w-100 justify-content-between">
                                                <p class="mb-1">@message</p>
                                                <small class="text-muted">
                                                    @if (message.Contains("[ORDER_PROCESSING]"))
                                                    {
                                                        <span class="badge bg-primary">Order Processing</span>
                                                    }
                                                    else if (message.Contains("[INVENTORY_MANAGEMENT]"))
                                                    {
                                                        <span class="badge bg-success">Inventory</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-secondary">General</span>
                                                    }
                                                </small>
                                            </div>
                                        </div>
                                    }
                                </div>
                                

                            }
                            else
                            {
                                <div class="text-center py-5">
                                    <div class="display-1 text-muted">ðŸ“¨</div>
                                    <h4>No Messages in Queue</h4>
                                    <p class="text-muted">The message queue is currently empty. Send some messages to see them here.</p>
                                    <a asp-action="SendMessage" class="btn btn-primary btn-lg">
                                        <i class="fas fa-plus"></i> Send First Message
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card">
                        <div class="card-header">
                            <h6 class="mb-0">ðŸš€ Quick Actions</h6>
                        </div>
                        <div class="card-body">
                            <div class="d-grid gap-2">

                                <h6 class="text-muted">Manual Entry:</h6>
                                
                                <form asp-action="SendOrderProcessingMessage" method="post">
                                    <div class="mb-2">
                                        <input type="text" name="orderId" class="form-control form-control-sm" placeholder="Order ID" required>
                                    </div>
                                    <div class="mb-2">
                                        <input type="text" name="customerName" class="form-control form-control-sm" placeholder="Customer Name" required>
                                    </div>
                                    <div class="mb-2">
                                        <input type="number" name="orderAmount" class="form-control form-control-sm" placeholder="Amount" step="0.01" required>
                                    </div>
                                    <button type="submit" class="btn btn-primary btn-sm w-100">Send Order Message</button>
                                </form>

                                <hr>

                                <form asp-action="SendInventoryMessage" method="post">
                                    <div class="mb-2">
                                        <input type="text" name="productName" class="form-control form-control-sm" placeholder="Product Name" required>
                                    </div>
                                    <div class="mb-2">
                                        <select name="action" class="form-select form-select-sm" required>
                                            <option value="">Select Action</option>
                                            <option value="Restock">Restock</option>
                                            <option value="Sale">Sale</option>
                                            <option value="Low Stock Alert">Low Stock Alert</option>
                                            <option value="Damaged">Damaged</option>
                                        </select>
                                    </div>
                                    <div class="mb-2">
                                        <input type="number" name="quantity" class="form-control form-control-sm" placeholder="Quantity" required>
                                    </div>
                                    <button type="submit" class="btn btn-success btn-sm w-100">Send Inventory Message</button>
                                </form>
                            </div>
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </div>
</div>
