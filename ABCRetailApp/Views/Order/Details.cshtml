@model ABCRetailApp.Services.Order
@{
    ViewData["Title"] = "Order Details";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">Order @Model.RowKey</h4>
                    <div class="btn-group">
                        <a asp-action="Index" class="btn btn-secondary text-white">
                            <i class="fas fa-arrow-left"></i> Back
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-3">Customer</dt>
                        <dd class="col-sm-9">@Model.CustomerName</dd>

                        <dt class="col-sm-3">Product</dt>
                        <dd class="col-sm-9">@Model.ProductName</dd>

                        <dt class="col-sm-3">Quantity</dt>
                        <dd class="col-sm-9">@Model.Quantity</dd>

                        <dt class="col-sm-3">Unit Price</dt>
                        <dd class="col-sm-9"><strong>R@Model.UnitPrice.ToString("N2")</strong></dd>

                        <dt class="col-sm-3">Total</dt>
                        <dd class="col-sm-9"><strong>R@Model.TotalAmount.ToString("N2")</strong></dd>

                        <dt class="col-sm-3">Status</dt>
                        <dd class="col-sm-9">@Model.Status</dd>

                        <dt class="col-sm-3">Created</dt>
                        <dd class="col-sm-9">@Model.DateCreated.ToString("yyyy-MM-dd HH:mm")</dd>

                        <dt class="col-sm-3">Notes</dt>
                        <dd class="col-sm-9">@Model.Notes</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>

