@model IEnumerable<string>

@{
    ViewData["Title"] = "Files";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>ðŸ“„ Contract Files</h2>
                <div>
                    <a asp-action="Upload" class="btn btn-primary me-2">
                        <i class="fas fa-upload"></i> Upload Contract
                    </a>
                </div>
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Files</h5>
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>File Name</th>
                                        <th>Type</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var fileName in Model)
                                    {
                                        <tr>
                                            <td>
                                                <i class="fas fa-file-alt text-secondary me-2"></i>
                                                @fileName
                                            </td>
                                            <td>
                                                @{
                                                    var extension = System.IO.Path.GetExtension(fileName).ToLowerInvariant();
                                                    var fileType = extension switch
                                                    {
                                                        ".pdf" => "PDF Document",
                                                        ".doc" => "Word Document",
                                                        ".docx" => "Word Document",
                                                        ".txt" => "Text Document",
                                                        ".rtf" => "Rich Text Document",
                                                        _ => "Document"
                                                    };
                                                }
                                                <span class="badge bg-secondary">@fileType</span>
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Download" asp-route-fileName="@fileName" 
                                                       class="btn btn-sm btn-outline-primary" title="Download">
                                                        <i class="fas fa-download"></i>
                                                    </a>
                                                    <form asp-action="Delete" asp-route-fileName="@fileName" method="post" style="display:inline;">
                                                        <button type="submit" class="btn btn-sm btn-outline-danger" 
                                                                onclick="return confirm('Are you sure you want to delete this contract file?')" title="Delete">
                                                            <i class="fas fa-trash"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        

                    }
                    else
                    {
                        <div class="text-center py-5">
                            <div class="display-1 text-muted">ðŸ“„</div>
                            <h4>No Contract Files Found</h4>
                            <p class="text-muted">Start by uploading contract documents to Azure File Storage.</p>
                            <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                                <a asp-action="Upload" class="btn btn-primary btn-lg me-md-2">
                                    <i class="fas fa-upload"></i> Upload Contract
                                </a>
                            </div>
                        </div>
                    }
                </div>
            </div>


        </div>
    </div>
</div>
