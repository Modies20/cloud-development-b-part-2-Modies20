@model ABCRetailApp.Services.Product

@{
    ViewData["Title"] = "Delete Product";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h4>üóëÔ∏è Delete Product</h4>
                    <p class="mb-0">Are you sure you want to delete this product?</p>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger">
                        <h5>‚ö†Ô∏è Warning!</h5>
                        <p class="mb-0">This action cannot be undone.</p>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <h6>Product Information:</h6>
                            <dl class="row">
                                <dt class="col-sm-4">Name:</dt>
                                <dd class="col-sm-8"><strong>@Model.Name</strong></dd>
                                
                                <dt class="col-sm-4">Price:</dt>
                                <dd class="col-sm-8"><strong>R@Model.Price.ToString("N2")</strong></dd>
                                
                                <dt class="col-sm-4">Category:</dt>
                                <dd class="col-sm-8"><span class="badge bg-secondary">@Model.Category</span></dd>
                                
                                <dt class="col-sm-4">Stock:</dt>
                                <dd class="col-sm-8">
                                    @if (Model.StockQuantity <= 10)
                                    {
                                        <span class="badge bg-danger">@Model.StockQuantity units</span>
                                    }
                                    else if (Model.StockQuantity <= 50)
                                    {
                                        <span class="badge bg-warning">@Model.StockQuantity units</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">@Model.StockQuantity units</span>
                                    }
                                </dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <h6>Storage Details:</h6>
                            <dl class="row">
                                <dt class="col-sm-5">Product ID:</dt>
                                <dd class="col-sm-7"><code>@Model.RowKey</code></dd>
                                
                                <dt class="col-sm-5">Created:</dt>
                                <dd class="col-sm-7">@Model.DateCreated.ToString("yyyy-MM-dd HH:mm")</dd>
                                
                                <dt class="col-sm-5">Last Modified:</dt>
                                <dd class="col-sm-7">@(Model.Timestamp?.ToString("yyyy-MM-dd HH:mm") ?? "Never")</dd>
                            </dl>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <div class="mt-3">
                            <h6>Description:</h6>
                            <p class="text-muted">@Model.Description</p>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <div class="mt-3">
                            <h6>Image URL:</h6>
                            <p class="text-muted"><a href="@Model.ImageUrl" target="_blank">@Model.ImageUrl</a></p>
                        </div>
                    }

                    <div class="mt-4">

                    </div>

                    <form asp-action="Delete" method="post" class="mt-4">
                        <input asp-for="PartitionKey" type="hidden" />
                        <input asp-for="RowKey" type="hidden" />
                        
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary me-md-2">
                                <i class="fas fa-arrow-left"></i> Back to Products
                            </a>
                            <a asp-action="Details" asp-route-partitionKey="@Model.PartitionKey" asp-route-rowKey="@Model.RowKey" class="btn btn-info me-md-2">
                                <i class="fas fa-eye"></i> View Details
                            </a>
                            <a asp-action="Edit" asp-route-partitionKey="@Model.PartitionKey" asp-route-rowKey="@Model.RowKey" class="btn btn-warning me-md-2">
                                <i class="fas fa-edit"></i> Edit Instead
                            </a>
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you absolutely sure you want to delete this product? This action cannot be undone.')">
                                <i class="fas fa-trash"></i> Yes, Delete Product
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
