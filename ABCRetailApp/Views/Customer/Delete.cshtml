@model ABCRetailApp.Services.CustomerProfile

@{
    ViewData["Title"] = "Delete Customer";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h4>üóëÔ∏è Delete Customer Profile</h4>
                    <p class="mb-0">Are you sure you want to delete this customer?</p>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger">
                        <p class="mb-0">This action cannot be undone.</p>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <h6>Customer Information:</h6>
                            <dl class="row">
                                <dt class="col-sm-4">Name:</dt>
                                <dd class="col-sm-8"><strong>@Model.FirstName @Model.LastName</strong></dd>
                                
                                <dt class="col-sm-4">Email:</dt>
                                <dd class="col-sm-8">@Model.Email</dd>
                                
                                <dt class="col-sm-4">Phone:</dt>
                                <dd class="col-sm-8">@Model.Phone</dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <h6>Storage Details:</h6>
                            <dl class="row">
                                <dt class="col-sm-5">Customer ID:</dt>
                                <dd class="col-sm-7"><code>@Model.RowKey</code></dd>
                                
                                <dt class="col-sm-5">Created:</dt>
                                <dd class="col-sm-7">@Model.DateCreated.ToString("yyyy-MM-dd HH:mm")</dd>
                                
                                <dt class="col-sm-5">Last Modified:</dt>
                                <dd class="col-sm-7">@(Model.Timestamp?.ToString("yyyy-MM-dd HH:mm") ?? "Never")</dd>
                            </dl>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Address))
                    {
                        <div class="mt-3">
                            <h6>Address:</h6>
                            <p class="text-muted">@Model.Address</p>
                        </div>
                    }



                    <form asp-action="Delete" method="post" class="mt-4">
                        <input asp-for="PartitionKey" type="hidden" />
                        <input asp-for="RowKey" type="hidden" />
                        
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary me-md-2">
                                <i class="fas fa-arrow-left"></i> Back to List
                            </a>
                            <a asp-action="Details" asp-route-partitionKey="@Model.PartitionKey" asp-route-rowKey="@Model.RowKey" class="btn btn-info me-md-2">
                                <i class="fas fa-eye"></i> View Details
                            </a>
                            <a asp-action="Edit" asp-route-partitionKey="@Model.PartitionKey" asp-route-rowKey="@Model.RowKey" class="btn btn-warning me-md-2">
                                <i class="fas fa-edit"></i> Edit Instead
                            </a>
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you absolutely sure you want to delete this customer profile? This action cannot be undone.')">
                                <i class="fas fa-trash"></i> Yes, Delete Customer
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
