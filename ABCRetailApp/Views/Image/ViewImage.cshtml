@{
    ViewData["Title"] = "View Image - Azure Blob Storage";
    var imageUrl = ViewBag.ImageUrl as string;
    var fileName = ViewBag.FileName as string;
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card">
                <div class="card-header">
                    <h4>üñºÔ∏è View Image</h4>
                    <p class="mb-0 text-muted">Image stored in Azure Blob Storage</p>
                </div>
                <div class="card-body text-center">
                    @if (!string.IsNullOrEmpty(imageUrl))
                    {
                        <div class="mb-3">
                            <img src="@imageUrl" alt="@fileName" class="img-fluid rounded shadow" style="max-height: 500px;">
                        </div>
                        <h5>@fileName</h5>
                        <p class="text-muted">Stored in Azure Blob Storage</p>
                        
                        <div class="mt-4">
                            <a href="@imageUrl" target="_blank" class="btn btn-primary me-2">
                                <i class="fas fa-external-link-alt"></i> Open in New Tab
                            </a>
                            <a asp-action="Download" asp-route-fileName="@fileName" class="btn btn-success me-2">
                                <i class="fas fa-download"></i> Download
                            </a>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back to Images
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-danger">
                            <h5>Image Not Found</h5>
                            <p>The requested image could not be loaded from Azure Blob Storage.</p>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back to Images
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
